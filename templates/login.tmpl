<!--templates/login-->
<div class="container-fluid">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="login">
          <form onsubmit="return false;">
            <div class="form-group">
              <label for="username" class="sr-only">Email address</label>
              <input value="{{email}}" type="email" id="username" class="form-control username" placeholder="Email" />
            </div>
            <div class="form-group">
              <label for="password" class="sr-only">Password</label>
              <input type="password" id="password" class="form-control password" placeholder="Password" />
            </div>
            <div>
              <input type="submit" value="Sign in" class="btn btn-primary login-button">
              <button type="button" class="btn btn-default sign-up-button">Sign up</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
